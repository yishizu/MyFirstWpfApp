<Window x:Class="WpfApp09_CheckBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp09_CheckBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label ToolTip ="Please check your topping!" FontWeight="SemiBold">Pizza Topping</Label>
        <CheckBox Name ="cbAllTopping" IsThreeState="True" Checked="cbAllTopping_Checked" Unchecked="cbAllTopping_Checked">Add all</CheckBox>
        <StackPanel Margin="10">
            <CheckBox Name="cbSalami" Checked="cbSingle_Checked" Unchecked="cbSingle_Checked">
                <TextBlock>
                    Salami <Run Foreground="Red" FontWeight="Bold">Spicy</Run>
                </TextBlock>
            </CheckBox>
            <CheckBox Name="cbMushrooms" Checked="cbSingle_Checked" Unchecked="cbSingle_Checked">Mashrooms</CheckBox>
            <CheckBox Name="cbMozarella" Checked="cbSingle_Checked" Unchecked="cbSingle_Checked">Mozzarella</CheckBox>
        </StackPanel>
    </StackPanel>
</Window>
